<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Webhook Request Logger</title>
    <link rel="stylesheet" href="static/css/main.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="navbar-brand">Webhook</div>
      <ul class="navbar-nav">
        <li class="nav-item active">Webhook</li>
        <li class="nav-item">Dashboard</li>
        <li class="nav-item">Settings</li>
        <li class="nav-item">Profile</li>
      </ul>
    </nav>

    <div class="container">
      <!-- Left Sidebar: Request History -->
      <div class="sidebar">
        <h2>Request History</h2>
        <button id="delete-all-btn" class="delete-all-btn">Delete All</button>
        <div class="history-list" id="history-list">
          <!-- Logged requests will appear here -->
        </div>
      </div>
      <!-- Right Content: Raw JSON and Table View -->
      <div class="content">
        <!-- Raw JSON Section (Top) -->
        <div class="section" id="raw-json-section">
          <div id="webhook-url-container">
            <span id="webhook-url-text">Webhook URL: <%= webhookURL %></span>
            <button id="copy-webhook-btn" class="copy-btn" title="Copy">
              &#128203;
            </button>
          </div>
          <h3>Raw JSON Data</h3>
          <pre id="raw-json-display"></pre>
        </div>
        <!-- Table View Section (Bottom) -->
        <div class="section" id="table-section">
          <h3>Table View</h3>
          <table>
            <thead>
              <tr>
                <th>Key</th>
                <th>Value</th>
              </tr>
            </thead>
            <tbody id="json-table-body">
              <!-- Table rows will be added here -->
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="static/js/webhook.js"></script>
    <script src="static/js/index.js"></script>
  </body>
</html>
